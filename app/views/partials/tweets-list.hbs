{{#if tweets}}
  <div class="ui compact segments" id="tweets-content">
    {{#each tweets}}
      <article class="ui compact segment tweet">
        <h5 class="ui dividing header">{{user.nickname}}</h5>
        <div class="ui top right attached label">
          {{formatDate creation}}
        </div>
        <p>{{message}}</p>
        {{> tweet-image }}
      </article>
    {{/each}}
  </div>
{{else}}
  {{> no-content subject="No tweets available" }}
{{/if}}

<script type="text/javascript">
  $('#tweets-content article:nth-child(even)').addClass('secondary');
</script>